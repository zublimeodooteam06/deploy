<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
        <t t-extend="ListView.buttons">
            <t t-jquery="button.o_list_button_add" t-operation="replace">
                <button t-if="widget.modelName == 'calendar.event'"
                        type="button" class="btn btn-success o_list_button_add" accesskey="c">
                        Create New Meeting
                </button>
                <button t-if="widget.modelName != 'calendar.event'"
                        type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                        Create
                </button>
            </t>
          </t>
        <t t-extend="KanbanView.buttons">
            <t t-jquery="button" t-operation="replace">
                <button t-if="widget.modelName == 'calendar.event'"
                          type="button" class="btn btn-success o-kanban-button-new" accesskey="c">
                            Create New Meeting
                </button>
                <button t-if="widget.modelName != 'calendar.event'"
                          type="button" class="btn btn-primary o-kanban-button-new" accesskey="c">
                        Create
                </button>
            </t>
        </t>
        <t t-extend="CalendarView.quick_create">
            <t t-jquery=".form-group" t-operation="append">
                <field name="isOnline"/>
                <label class="col-form-label o_form_label" for="o_field_input_162">Online Meeting</label>
                <div class="o_field_boolean o_field_widget custom-control custom-checkbox" name="isOnline">
                    <input type="checkbox" id="o_field_input_350" name="isOnline" class="custom-control-input"/>
                    <label for="o_field_input_350" class="custom-control-label"/>
                </div>
            </t>
        </t>
</templates>
